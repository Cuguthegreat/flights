docker run -p 389:389 -p 636:636 --name ldap-service -h ldap-service -e LDAP_ORGANISATION="FC" -e LDAP_DOMAIN="flights.com" -e LDAP_ADMIN_PASSWORD="adminPassword" -d osixia/openldap:latest
docker run -p 6443:443 --name phpldapadmin-service -h phpldapadmin-service --link ldap-service:ldap-host -e PHPLDAPADMIN_LDAP_HOSTS=ldap-host --detach osixia/phpldapadmin:latest
docker run -d -p 9411:9411 openzipkin/zipkin